<Window x:Class="AsgardGym.Windows.DodajUsluguKorisnikaWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsgardGym.Windows"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="Dodaj Uslugu Korisnika" Height="250" Width="380">
    <Grid Margin="10">
        <StackPanel>
            <TextBlock Margin="5" VerticalAlignment="Top" FontWeight="Bold" FontSize="20">Odaberi uslugu:</TextBlock>
            <ComboBox Name="UslugeComboBox" Width="200" Height="30" Margin="5" HorizontalAlignment="Left"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="5">
            <Button Content="Dodaj" Width="75" Height="30" Margin="5" Click="Dodaj_Click"/>
            <Button Content="Odustani" Width="75" Height="30" Margin="5" Click="Odustani_Click"/>
        </StackPanel>
    </Grid>
</Window>
